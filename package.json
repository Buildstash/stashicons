{
  "name": "stashicons",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "https://github.com/buildstash/stashicons.git",
  "files": [
    "base/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepublishOnly": "bun run build",
    "lint": "node ./scripts/verify-names.js",
    "prebuild": "rimraf ./{base} ./{react}/{base} ./optimized/{base}",
    "build": "bun run build-base && bun run build-react",
    "build-react": "node ./scripts/build.js react",
    "build-base": "rimraf ./base ./optimized/base && svgo --config=svgo.base.mjs -f ./src/base -o ./optimized/base --pretty --indent=2",
    "release-channel": "node ./scripts/release-channel.js",
    "release-notes": "node ./scripts/release-notes.js"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-react-jsx": "^7.12.12",
    "@svgr/core": "^5.5.0",
    "camelcase": "^6.0.0",
    "prettier": "^2.8.7",
    "rimraf": "^3.0.2",
    "svgo": "^3.0.2"
  }
}
